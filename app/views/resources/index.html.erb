<!-- Content Header (Page header) -->
<section class="content-header">
  <h1>Resources<small>Version 1.0</small></h1>
	<ol class="breadcrumb">
	  <li><a href="index.html"><i class="fa fa-database"></i> Home</a></li>
		<li>Resources</li>
	</ol>
</section>

<!-- Main content -->
<section class="content">
  <div class="container-fluid">
    <p id="notice"><%= notice %></p>
		<div class="row">
			<div class="col-md-12">
				<div class="box">
	        <div class="box-header">
		        <h3 class="box-title">All Resources</h3>
            <%= link_to 'New Resource', new_resource_path, :class => "pull-right btn btn-flat btn-success" %>
			    </div>
			    <!-- /.box-header -->
		      <div class="box-body">
		      	<div class="table-responsive">
		      		<table id="resourcesTable" class="table table-bordered table-striped">
		            <thead>
			            <tr>
			              <th>Name</th>
			              <th>Full Path</th>
			              <th>Description</th>
			              <th class="width25px"></th>
			            </tr>
			          </thead>
			          <tbody>
                <% @resources.each do |resource| %>
                  <tr>
                    <td><%= resource.name %></td>
                    <td><%= resource.full_path %></td>
                    <td><%= resource.description %></td>
                    <td><%= link_to 'Show', resource %> <%= link_to 'Edit', edit_resource_path(resource) %> <%= link_to 'Destroy', resource, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                  </tr>
                <% end %>
                </tbody>
              </table>
            </div>
	        </div>
			    <!-- /.box-body -->
		    </div>
			  <!-- /.box -->
			</div>
		</div>
	</div>
</section>