<!-- Content Header (Page header) -->
<section class="content-header">
  <h1>Users<small>Version 1.0</small></h1>
  <ol class="breadcrumb">
	<li><a href="#"><i class="fa fa-user"></i> Home</a></li>
	<li>Users</li>
  </ol>
</section>

<p id="notice"><%= notice %></p>

<!-- Main content -->
<section class="content">
	<div class="container-fluid">
		<div class="row">
			<div class="col-md-12">
				<div class="box">
          <div class="box-header">
            <h3 class="box-title">Registered Users</h3>
            <%= link_to 'New User', new_user_path, :class => "btn btn-success btn-flat pull-right" %>
          </div>
          <!-- /.box-header -->
          <div class="box-body table-responsive">
            <table id="usersTable" class="table table-bordered table-striped">
              <thead>
              <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Username</th>
                <th class="width25px"></th>
              </tr>
              </thead>
              <tbody>
              <% @users.each do |user| %>
                <tr>
                  <td><%= user.first_name %></td>
                  <td><%= user.last_name %></td>
                  <td><%= user.username %></td>
                  <td><%= link_to 'Show', user %> <%= link_to 'Edit', edit_user_path(user) %> <%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                </tr>
              <% end %>
              </tbody>
            </table>
          </div>
			    <!-- /.box-body -->
		    </div>
			  <!-- /.box -->
			</div>
		</div>
	</div>
</section>

<br>

