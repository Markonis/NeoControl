<!-- Content Header (Page header) -->
			<section class="content-header">
			  <h1>User Groups<small>Version 1.0</small></h1>
			  <ol class="breadcrumb">
				<li><a href="#"><i class="fa fa-users"></i> Home</a></li>
				<li>User Groups</li>
			  </ol>
			</section>

		<!-- Main content -->
		<section class="content">
			<div class="container-fluid">

<p id="notice"><%= notice %></p>

<div class="row">
					<div class="col-lg-7">
						<div class="box">
			            <div class="box-header">
			              <h3 class="box-title">Active User Groups</h3>
                    <%= link_to 'New Group', new_group_path, :class => "btn btn-succes btn-flat pull-right" %>
			            </div>
			            <!-- /.box-header -->
			            <div class="box-body table-responsive">
			              <table id="userGroupsTable" class="table table-bordered table-striped">
			                <thead>
			                <tr>
			                  <th>Name</th>
			                  <th>Descripton</th>
			                  <th class="width25px"></th>
			                </tr>
			                </thead>
			                <tbody>
			                  
			                   <% @groups.each do |group| %>
                          <tr>
                            <td><%= group.name %></td>
                            <td><%= group.description %></td>
                            <td><%= link_to 'Show', group %> <%= link_to 'Edit', edit_group_path(group) %> <%= link_to 'Destroy', group, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                          </tr>
                        <% end %>
			                </tbody>
			              </table>
			            </div>
			            <!-- /.box-body -->
			          </div>
			          <!-- /.box -->
					</div>
				</div>
</div>
		</section>